<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/username_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                tools:text="I"
                android:textColor="@color/black"
                android:background="@drawable/circle_background" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/username_initial"
                android:layout_marginStart="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefinsansregular"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/username"
                    android:textColor="@color/black"
                    android:textSize="11.5sp" />

                <TextView
                    android:id="@+id/role_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username_item"
                    android:fontFamily="@font/josefinsansregular"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/Role"
                    android:textColor="@color/black"
                    android:textSize="11.5sp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/status_txt_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/role_item"
                    android:fontFamily="@font/josefinsansregular"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="11.5sp"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/Make_Admin_txtlyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/act_layout_button"
                android:padding="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/Make_Admin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="Make Admin"
                    android:textColor="@color/black"
                    android:textSize="9.5sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Activate_txtlyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Make_Admin_txtlyt"
                android:background="@drawable/act_layout_button"
                android:padding="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/Activate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="Activate"
                    android:textColor="@color/black"
                    android:textSize="9.5sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Deactivate_txtlyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Activate_txtlyt"
                android:background="@drawable/act_layout_button"
                android:padding="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/Deactivate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="Deactivate"
                    android:textColor="@color/black"
                    android:textSize="9.5sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Resend_OTP_txtlyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Deactivate_txtlyt"
                android:background="@drawable/act_layout_button"
                android:padding="10dp">

                <TextView
                    android:id="@+id/Resend_OTP_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="ResendOTP"
                    android:textColor="@color/black"
                    android:textSize="9.5sp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#FFFF"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/greetings_card"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        app:cardElevation="58dp"
        android:padding="10dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:id="@+id/rectangle_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg1"
                android:elevation="40dp" />

            <View
                android:id="@+id/notification_bell"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/notification"
                android:elevation="40dp" />

            <TextView
                android:id="@+id/welcome_ian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="32dp"
                android:fontFamily="@font/josefinsansregular"
                android:textSize="18sp"
                android:layout_marginTop="33dp"
                android:text="@string/welcoming_textview"
                android:textColor="@android:color/white"
                android:elevation="40dp" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>
    <!--<Button
            android:id="@+id/signup_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/purple"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="20sp" />
    -->

        <TextView
            android:id="@+id/rectangle_2"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="114dp"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/josefinsansregular"
            android:text="@string/search_transaction_textview"
            android:textColor="#A48989"
            android:background="@drawable/rectangle_2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/total_transaction_card"
        android:layout_width="150dp"
        android:layout_height="69dp"
        app:cardElevation="28dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="50dp"
        app:cardCornerRadius="15dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tc">

            <TextView
                android:id="@+id/total_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="11dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="1000"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total_transactions_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="37dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="@string/total_transactions_textview"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/pending_transaction_card"
        android:layout_width="150dp"
        android:layout_height="69dp"
        app:cardElevation="28dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="220dp"
        app:cardCornerRadius="15dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/tc">

            <TextView
                android:id="@+id/pending_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="200"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pending_transactions_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="37dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="@string/pending_transactions_textview"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/missing_transactions_card"
        android:layout_width="150dp"
        android:layout_height="69dp"
        app:cardElevation="28dp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="220dp"
        app:cardCornerRadius="15dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/tc">

            <TextView
                android:id="@+id/missing_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="10dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="100"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/missing_transactions_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="34dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="Missing transactions"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/failed_transactions_card"
        android:layout_width="150dp"
        android:layout_height="69dp"
        app:cardElevation="28dp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="50dp"
        app:cardCornerRadius="15dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/tc">

            <TextView
                android:id="@+id/failed_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="6dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="400"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/failed_transactions_txt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="33dp"
                android:elevation="40dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="Failed transactions"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/recent_transactions"
        android:layout_width="146dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/josefinsansregular"
        android:gravity="top"
        android:text="@string/recent_transactions_textview" />

    <TextView
        android:id="@+id/view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="351dp"
        android:fontFamily="@font/josefinsansregular"
        android:gravity="top"
        android:text="@string/view_more_textview"
        android:textColor="#6C2671"
        android:textSize="12sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="295dp"
        android:layout_height="304dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="382dp"
        app:cardElevation="30dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tc">
            <View
                android:id="@+id/transactions_rectangle"
                android:layout_width="295dp"
                android:layout_height="304dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="66dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="462dp"
                android:elevation="4dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

















</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#FFFF"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/greetingcard"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        app:cardElevation="58dp"
        android:padding="10dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:id="@+id/rectangle_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg1"
                android:elevation="40dp" />

            <View
                android:id="@+id/vector"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/notification"
                android:elevation="40dp" />

            <TextView
                android:id="@+id/welcome_ian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="32dp"
                android:fontFamily="@font/josefinsansregular"
                android:textSize="18sp"
                android:layout_marginTop="33dp"
                android:text="Welcome Ian!"
                android:textColor="@android:color/white"
                android:elevation="40dp" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>


        <EditText
            android:id="@+id/rectangle_2"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:fontFamily="@font/josefinsansregular"
            android:text="Search Transaction"
            android:textColor="#A48989"
            android:background="@drawable/rectangle_2" />


        <androidx.cardview.widget.CardView
            android:id="@+id/totaltransactioncard"
            android:layout_width="150dp"
            android:layout_height="69dp"
            app:cardElevation="28dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="30dp"
            app:cardCornerRadius="15dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tc">

                <TextView
                    android:id="@+id/totaltransactionsnumber_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="1000"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/totaltransaction_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Total transactions"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pendingtransactioncard"
            android:layout_width="150dp"
            android:layout_height="69dp"
            app:cardElevation="28dp"
            android:layout_toRightOf="@id/totaltransactioncard"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            app:cardCornerRadius="15dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/tc">

                <TextView
                    android:id="@+id/pendingtransactionsnumber_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="200"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/pendingtransaction_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="37dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Pending transactions"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/transactioncard"
            android:layout_width="150dp"
            android:layout_height="69dp"
            app:cardElevation="28dp"
            android:layout_toRightOf="@id/failedtransactioncard"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="257dp"
            app:cardCornerRadius="15dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/tc">

                <TextView
                    android:id="@+id/missingtransactionsnumber_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="100"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/missingtransaction_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="35dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Missing transactions"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/failedtransactioncard"
            android:layout_width="150dp"
            android:layout_height="69dp"
            app:cardElevation="28dp"
            android:layout_below="@id/totaltransactioncard"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:cardCornerRadius="15dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/tc">

                <TextView
                    android:id="@+id/failestransactionsnumber_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="400"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/failestransaction_txt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="35dp"
                    android:elevation="40dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Failed transactions"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/recent_tran"
        android:layout_width="146dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/josefinsansregular"
        android:gravity="top"

        android:text="Recent Transactions" />

    <TextView
        android:id="@+id/view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="279dp"
        android:layout_marginTop="354dp"
        android:fontFamily="@font/josefinsansregular"
        android:gravity="top"
        android:text="View more"
        android:textColor="#6C2671"
        android:textSize="12sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="295dp"
        android:layout_height="304dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="382dp"
        app:cardElevation="30dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tc">
            <View
                android:id="@+id/rectangle_7"
                android:layout_width="295dp"
                android:layout_height="304dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="66dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="462dp"
                android:elevation="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phonenumbertxt"
                android:text="Phonenumber"
                android:fontFamily="@font/josefinsansregular"
                android:textSize="11.5sp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reference_id_txt"
                android:text="Reference Id"
                android:fontFamily="@font/josefinsansregular"
                android:textSize="11.5sp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_txt"
                android:text="Status"
                android:fontFamily="@font/josefinsansregular"
                android:textSize="11.5sp"
                android:layout_marginStart="185dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_txt"
                android:text="Time"
                android:fontFamily="@font/josefinsansregular"
                android:textSize="11.5sp"
                android:layout_marginStart="232dp"
                android:layout_marginTop="10dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    tools:listitem="@layout/item_payment" />
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".presentation.activities.History">

    <TextView
        android:id="@+id/history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/josefinsansregular"
        android:gravity="top"
        android:text="@string/history"
        android:textColor="#6C2671"
        android:textSize="28sp"
        android:shadowColor="#AA2F2F2F"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"/>

    <RelativeLayout
        android:id="@+id/toggle_switch"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/history_title"
        android:paddingHorizontal="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPaymentsReport"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/payments_history_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg1"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/payments_history_text"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="@string/s"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardReportHistory"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/sessions_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg12"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/sessions_history_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Sessions"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <TextView
        android:id="@+id/transactions_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle_switch"
        android:fontFamily="@font/josefinsansregular"
        android:paddingHorizontal="40dp"
        android:text="@string/all_transactions"
        android:textColor="@color/black"
        android:shadowColor="#AA2F2F2F"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@id/recyclercardlabel"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="5dp"
        android:layout_below="@id/transactions_label"
        android:padding="8dp"
        android:elevation="40dp"
        android:weightSum="4"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/josefinsansregular"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="11.5sp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mpesa_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/josefinsansregular"
                android:text="Reference no"
                android:textColor="@color/black"
                android:textSize="11.5sp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/josefinsansregular"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="11.5sp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/date_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/josefinsansregular"
                android:text="Date And Time"
                android:textColor="@color/black"
                android:textSize="11.5sp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"/>
        </RelativeLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclercardlabel">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/recyclercard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/payments_rec_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            tools:listitem="@layout/item_payment" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

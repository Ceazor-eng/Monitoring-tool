<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".presentation.activities.SessionsFragment">


    <TextView
        android:id="@+id/history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/josefinsansregular"
        android:gravity="top"
        android:text="Sessions History"
        android:textColor="#6C2671"
        android:textSize="28dp"
        android:shadowColor="#AA2F2F2F"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"/>

    <RelativeLayout
        android:id="@+id/toggle_switch"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/history_title"
       >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPaymentsReport"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:id="@+id/payments_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg1"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Payments"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="2"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardReportHistory"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:id="@+id/sessions_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg12"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sessions_history_text"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Sessions"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#AA2F2F2F"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="2"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <TextView
        android:id="@+id/transactions_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle_switch"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/josefinsansregular"
        android:paddingHorizontal="40dp"
        android:text="@string/all_sessions"
        android:textColor="@color/black"
        android:shadowColor="#AA2F2F2F"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/transactions_label"
        android:elevation="40dp"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/josefinsansregular"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="11.5sp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/session_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/josefinsansregular"
                android:text="Session Id"
                android:textColor="@color/black"
                android:textSize="11.5sp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/date_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/josefinsansregular"
                android:text="Date And Time"
                android:textColor="@color/black"
                android:textSize="11.5sp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transactions_label">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/recyclercard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@color/white"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ussd_rec_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@color/white"
                            tools:listitem="@layout/item_ussd" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

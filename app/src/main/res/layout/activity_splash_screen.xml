<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".presentation.activities.SplashScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/kocela" />

    <TextView
        android:id="@+id/streamlinin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/josefinsansregular"
        android:gravity="center_horizontal|top"
        android:paddingHorizontal="60dp"
        android:text="Streamlining your online experience with our cutting-edge monitoring tool."
        android:textSize="15sp"
        android:shadowColor="#AA2F2F2F"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"/>

</RelativeLayout>


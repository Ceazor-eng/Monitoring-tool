<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.activities.AddUser">


    <View
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:background="@drawable/kocela" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/josefinsansregular"
            android:text="Register User"
            android:textColor="#6D2088"
            android:textSize="28sp"
            android:shadowColor="#AA2F2F2F"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Email"
            android:inputType="text"
            android:paddingStart="16dp" />


        <EditText
            android:id="@+id/fName"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Firstname"
            android:paddingStart="16dp" />

        <EditText
            android:id="@+id/lName"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/fName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Lastname"
            android:paddingStart="16dp" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/lName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Phonenumber"
            android:paddingStart="16dp" />

        <RelativeLayout
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/phoneNumber"
            android:background="@drawable/rectangle_2"
            android:id="@+id/roleSpinnerly"
            >


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/roleSpinner"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/josefinsansregular"
            android:paddingStart="16dp"
            android:spinnerMode="dropdown"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/username"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/roleSpinnerly"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Username"
            android:inputType="text"
            android:paddingStart="16dp" />


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/josefinsansbold"
            android:gravity="center_horizontal"
            android:text="Register" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>

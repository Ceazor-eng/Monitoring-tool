<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.activities.AddUser">


    <View
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bck" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="101dp">


        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/josefinsansregular"
            android:gravity="center_horizontal"
            android:shadowColor="#AA2F2F2F"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="Register User"
            android:textColor="#6D2088"
            android:textSize="28sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Email"
            android:inputType="text"
            android:paddingStart="16dp" />


        <EditText
            android:id="@+id/fName"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Firstname"
            android:paddingStart="16dp" />

        <EditText
            android:id="@+id/lName"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/fName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Lastname"
            android:paddingStart="16dp" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/lName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Phonenumber"
            android:paddingStart="16dp" />

        <RelativeLayout
            android:id="@+id/roleSpinnerly"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/phoneNumber"
            android:background="@drawable/rectangle_2">


            <Spinner
                android:id="@+id/roleSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/josefinsansregular"
                android:paddingStart="16dp"
                android:spinnerMode="dropdown" />

        </RelativeLayout>

        <EditText
            android:id="@+id/username"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_below="@id/roleSpinnerly"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Username"
            android:inputType="text"
            android:paddingStart="16dp" />


        <LinearLayout
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/bg_linear_layout_button"
            android:elevation="15dp"
            android:fontFamily="@font/josefinsansbold"
            android:gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/josefinsansregular"
                android:paddingHorizontal="25dp"
                android:shadowColor="#AA2F2F2F"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="Register"
                android:textColor="@color/white" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>
